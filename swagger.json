        "tags": ["Categories"],
        "summary": "Add categories ",
        "security": [{ "Bearer": [] }],
        "parameters": [],
        "requestBody": {
          "description": "Categories object addition",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddCategoriesRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddCategoriesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          },
          "401": {
            "description": "Unauthorized",
            "content": {}
          }
        }
      }
    },
    "/api/report/": {
      "get": {
        "tags": ["Report"],
        "summary": "Report of the year by months ",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "i",
            "in": "query",
            "description": "Input -income",
            "schema": {
              "type": "integer",
              "minimum": 4,
              "default": 2021,
              "description": "year",
              "required": "true"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          }
        }
      }
    },
    "/api/report": {
      "get": {
        "tags": ["Report"],
        "summary": "Report of the year by months ",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "o",
            "in": "query",
            "description": "Output -Outcome",
            "schema": {
              "type": "integer",
              "minimum": 4,
              "default": 2021,
              "description": "year",
              "required": "true"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          }
        }
      }
    }
  },

