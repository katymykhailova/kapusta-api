            "example": "User"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "user@test.com"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "123t456e789st"
          }
        }
